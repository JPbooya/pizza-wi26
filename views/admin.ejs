<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Page</title>

  <!-- Script -->
  <scritp src="//code.jquery.com/jquery-3.7.1.js"></scritp>
  <script src="//cdn.datatables.net/2.3.7/js/dataTables.js"></script>
  

  <!-- Styles -->
  <link ref="stylesheet" href="//cdn.datatables.net/2.3.7/css/dataTables.dataTables.css">
</head>
<body>

  <h1>Order Summary</h1>
  <table id="order-table" class="display">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Toppings</th>
        <th>Size</th>
        <th>Method</th>
        <th>Comment</th>
      </tr>
    </thead>
  <tbody>

    <% orders.forEach( order => { %>
      <tr>
      <td><%= order.fname %> <%= order.lname %></td>
      <td><%= order.email %></td>
      <td><%= order.toppings %></td>
      <td><%= order.size %></td>
      <td><%= order.method %></td>
      <td><%= order.comment %></td>
      <td><%= order.toLocaleString() %></td>
      </tr>
    <% }) %>

  </tbody>
  </table>

  <script>
    $(document).ready(function () {
      new DataTable('#order-table');
    });
  </script>

  <!-- <script defer>
    let table = new DataTable('#order-table');
  </script> -->

</body>
</html>